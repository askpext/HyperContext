{
  "manifest_version": 3,
  "name": "HyperContext Web Highlighter",
  "version": "1.0",
  "description": "Highlight text for quick summaries via Wikipedia or local page parsing.",
  "permissions": ["activeTab", "storage", "tabs"],
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}